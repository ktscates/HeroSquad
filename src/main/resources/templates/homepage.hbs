{{#partial "title" }}
    Homepage
{{/partial}}

{{#partial "content"}}

    <h1 class="squads">SQUADS</h1>
    <div class="album py-5 ">
        <div class="container">

            {{#if squads}}
                <p>All Squads</p>
                {{#each squads}}

                    <h5 class="card-title"> {{squad_name}} </h5>
                    <p class="card-text"> {{cause}} </p>
        <!--            <a class="btn btn-primary" href="/squads/$squad.getId()">Details</a>-->
                    <p class="text-muted">{{maxsize}}</p>
                {{/each}}
                {{else}}
                    <p>No Squads</p>
                {{/if}}

            <div>
                <a class="btn btn-info d-flex justify-content-center" href="/squads/new">Add New Squad</a>
            </div>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}
